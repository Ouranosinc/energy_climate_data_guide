doi = {10.1088/1748-9326/ab5aa5},
file = {:C\:/Users/jkeum.yukon/Documents/Mendeley Desktop/Lipson et al._2019_Climate change impact on energy demand in building-urban-atmosphere simulations through the 21st century.pdf:pdf},
