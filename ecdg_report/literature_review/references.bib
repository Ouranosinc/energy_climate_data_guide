doi = {10.1016/j.rser.2019.109681},
file = {:C\:/Users/jkeum.yukon/Documents/Mendeley Desktop/Berardi, Jafarpur_2020_Assessing the impact of climate change on building heating and cooling energy demand in Canada.pdf:pdf},
