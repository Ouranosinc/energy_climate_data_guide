doi = {10.1016/j.apenergy.2018.11.039},
file = {:C\:/Users/jkeum.yukon/Documents/Mendeley Desktop/Burillo et al._2019_Forecasting peak electricity demand for Los Angeles considering higher air temperatures due to climate change.pdf:pdf},
issn = {03062619},
journal = {Applied Energy},
keywords = {Building energy modeling,Climate change,Demand forecasting,Heat waves,Peak demand,Spatial analysis},
month = {feb},
pages = {1--9},
publisher = {Elsevier Ltd},
title = {{Forecasting peak electricity demand for Los Angeles considering higher air temperatures due to climate change}},
