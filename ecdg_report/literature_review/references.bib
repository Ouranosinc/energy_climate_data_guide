keywords = {Building performance simulation,Climate change,Energy use intensity,Future weather file,Greenhouse gas emission,Statistical and dynamical downscaling},
number = {October 2019},
pages = {109681},
publisher = {Elsevier Ltd},
title = {{Assessing the impact of climate change on building heating and cooling energy demand in Canada}},
url = {https://doi.org/10.1016/j.rser.2019.109681},
volume = {121},
year = {2020}
